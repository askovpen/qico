#include <config.h>
#include <stdio.h>
#ifdef HAVE_STDLIB_H
#include <stdlib.h>
#endif
#include <sys/utsname.h>
#include "ver.h"
#include "cvsdate.h"

char progname[]="@PACKAGE_NAME@";
char version[]="@PACKAGE_VERSION@";
char *osname="Unix";

void u_vers(char *progn)
{
	struct utsname uts;
	printf("%s v%s [%s]\n",progn,version,cvsdate);
	if(!uname(&uts))
	printf("%s %s (%s), ",uts.sysname,uts.release,uts.machine);
	printf(
#ifdef __GNUC__
		"g"
#endif
		"cc: "
#ifdef __VERSION__
		__VERSION__
#else
		"unknown"
#endif
		"\n");
	exit(0);
}
